@model InventoryMgmt.Models.User

@{
    ViewBag.Title = "Signup";
}

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">

    <!-- General CSS Files -->
    @*@<link rel="stylesheet" href=@Url.Content("https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css") integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">*@
    <link rel="stylesheet" href=@Url.Content("/Content/bootstrap.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/bootstrap.min.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/bootstrap-theme.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/bootstrap-theme.min.css")>
    <link rel="stylesheet" href=@Url.Content("https://use.fontawesome.com/releases/v5.7.2/css/all.css") integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <!-- CSS Libraries -->
    <link rel="stylesheet" href=@Url.Content("/Content/node_modules/summernote/dist/summernote-bs4.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/node_modules/codemirror/lib/codemirror.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/node_modules/codemirror/theme/duotone-dark.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/node_modules/selectric/public/selectric.css")>

    <!-- Template CSS -->
    <link rel="stylesheet" href=@Url.Content("/Content/style.css")>
    <link rel="stylesheet" href=@Url.Content("/Content/components.css")>

</head>

<body>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="card card-primary">
                            <div class="card-header"><h4>Register</h4></div>

                            <div class="card-body">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Nama, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @Html.EditorFor(model => model.Nama, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Nama, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" value="Register" class="btn btn-primary btn-lg btn-block" tabindex="4" />
                                    </div>
                                }
                                <div>
                                    @Html.ActionLink("Click to login", "Login")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </section>
    </div>
    <footer class="main-footer">
        <div class="footer-left">
            Copyright &copy; 2021 <div class="bullet"></div>
        </div>
        <div class="footer-right">
            2.3.0
        </div>
    </footer>
    <!--  -->
    <!-- General JS Scripts -->
    <script src=@Url.Content("https://code.jquery.com/jquery-3.3.1.min.js") integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src=@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js") integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src=@Url.Content("https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js") integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src=@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.7.6/jquery.nicescroll.min.js")></script>
    <script src=@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js")></script>
    <script src=@Url.Content("/Content/assets/js/stisla.js")></script>

    <!-- JS Libraies -->
    <!-- Template JS File -->
    <script src=@Url.Content("/Content/assets/js/scripts.js")></script>
    <script src=@Url.Content("/Content/assets/js/custom.js")></script>
</body>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>